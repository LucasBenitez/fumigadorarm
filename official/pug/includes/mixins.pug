mixin sub-navbar(datas)
    - let arrCopy = datas.slice();
    - let lastElement = arrCopy.pop();
    -let boton = datas[0]
    .container
            .row
              .col-12.d-flex.justify-content-center.my-3.red.rounded.rounded-lg
                div.navbar.navbar-expand-lg.navbar-dark.red
                    div.container
                          div.boton-i.d-flex.flex-column.justify-content-center.align-items-center  
                            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleSubNav" aria-controls="basicExampleSubNav" aria-expanded="false" aria-label="Toggle navigation")= boton
                              .i.fas.fa-chevron-down.fa-1x.z-depth-1.arrow-sub-navbar  
                          div.collapse.navbar-collapse.text-uppercase.spacing-2#basicExampleSubNav
                              
                              each data,i in datas
                                if i===0
                                  boton.hide
                                else
                                  ul.navbar-nav
                                    li.nav-item
                                        a.navbar-brand(href="index.html")
                                            a.nav-link(href="#")=data
                      



mixin text-bug(objBug)
  .container
    .col-10.mx-auto
      .d-flex.flex-column.justify-content-center.align-items-center.text-uppercase.text-center.text-white.degrade-red.rounded.rounded-lg.border-red-darken.py-3.position-relative.z-index-4.shadow-top
        .position-absolute.icon-absolute-bug
          i.fas.fa-bug.fa-2x.mb-3.solid-red-darken.circle-white.shadow
        h1.font-weight-bold.font-35.spacing-5.mt-4= objBug.name
        hr.border.border-white.rounded.rounded-lg.w-75.mx-auto.shadow-bottom
        p.font-11.spacing-3.px-4.mb-3= objBug.description
      .d-flex.justify-content-center.text-upperscase
        .position-absolute.icon-absolute-check.z-index-4
          i.fas.fa-check.fa-2x.circle-white-1.solid-red-darken.shadow-inner-top.mb-1
        .white.rounded.rounded-lg.pt-5.mt-n5.position-absolute.z-index-3.sub-box-absolute.m-auto
          .text-center.mt-5
            p.pt-5.mb-3.font-11.font-weight-bold.spacing-2.text-uppercase= objBug.textPlus

mixin card-factory(cards)
  each card in cards
    .col-sm-12.col-md-4.d-flex.align-items-stretch.justify-content-center.my-2.my-sm-3
      div(class= `img-service-${card.image}`).card.rounded.rounded-lg.w-100
        .card-body.position-relative.z-index-3
          h4.card-title 
            a(href= card.link).text-white #{card.title}
          hr.pt-1.white.w-100
          p.card-text.text-white.mb-5 #{card.description}
          .text-center.position-absolute.bottom-10.left-0.right-0
            a(href= card.link).btn.btn-outline-white.text-uppercase saber mas

